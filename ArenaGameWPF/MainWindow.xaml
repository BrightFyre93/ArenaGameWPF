<Window x:Class="ArenaGameWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArenaGameWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="1000">
    <Grid Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
        <Button Content="Start Game" HorizontalAlignment="Left" Margin="443,96,0,0" VerticalAlignment="Top" Width="90" Click="Start_Journey"/>
        <Label x:Name="InfoLabel" Content="Would you like to start a new game?" HorizontalAlignment="Left" Margin="355,38,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Label x:Name="HeroLevelLabel" Content="Hero Level: 1" HorizontalAlignment="Left" Margin="865,34,0,0" VerticalAlignment="Top"/>
        <Label x:Name="HeroEXPLabel" Content="Hero EXP: 0" HorizontalAlignment="Left" Margin="871,85,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.361,0.422"/>
        <Label x:Name="GameActionLabel" Content="" HorizontalAlignment="Left" Height="204" Margin="150,200,0,0" VerticalAlignment="Top" Width="700" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
    </Grid>
</Window>
